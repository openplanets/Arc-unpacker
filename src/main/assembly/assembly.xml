<assembly>
    <id>warc-unpacker</id>
    <formats>
        <format>zip</format>
    </formats>

    <dependencySets>

        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>org.webArchiveFile.heritrix:heritrix-commons</include>
                <include>dk.statsbiblioteket.scape:arc-unpacker</include>
            </includes>

            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>

    </dependencySets>

    <fileSets>

        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>src/main/scripts</directory>
            <fileMode>0755</fileMode>
        </fileSet>

    </fileSets>


</assembly>

